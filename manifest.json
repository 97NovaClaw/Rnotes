{
  "manifest_version": 3,
  "name": "Rnotes & Workspace",
  "version": "1.5",
  "description": "Streamlines Restornet note formatting, Tromis job management, and Automates Drive Workspaces.",
  "author": "LEGWORKmedia",
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://tromis.northparkcleaners.com/*",
    "https://YOUR-WORDPRESS-DOMAIN.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}